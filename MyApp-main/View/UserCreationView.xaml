<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MyApp.ViewModel"
             x:Class="MyApp.View.UserCreationView"
             Title="Créer un utilisateur">

    <ContentPage.BindingContext>
        <viewmodel:UserCreationViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Entry Placeholder="Prénom" Text="{Binding FirstName}" />
            <Entry Placeholder="Nom" Text="{Binding LastName}" />
            <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
            <Entry Placeholder="Mot de passe" Text="{Binding Password}" IsPassword="True" />
            <Entry Placeholder="Rôle" Text="{Binding Role}" />

            <Button Text="Créer l'utilisateur" Command="{Binding CreateUserCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

