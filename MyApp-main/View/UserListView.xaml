<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:MyApp.ViewModel"
    xmlns:model="clr-namespace:MyApp.Model"
    x:Class="MyApp.View.UserListView"
    x:DataType="viewmodel:UserListViewModel"
    BackgroundColor="#121212"
    Title="👥 Utilisateurs">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            <Label Text="📋 Liste des utilisateurs"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#FFD700" />

            <CollectionView ItemsSource="{Binding Users}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:User">
                        <Frame BackgroundColor="#1E1E1E"
                               BorderColor="White"
                               CornerRadius="15"
                               Padding="15"
                               HasShadow="True"
                               Margin="0,10">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding FirstName}" 
                                       FontAttributes="Bold"
                                       TextColor="#F1C40F"
                                       FontSize="18"/>
                                <Label Text="{Binding LastName}" 
                                       FontAttributes="Bold"
                                       TextColor="#F1C40F"
                                       FontSize="18"/>
                                <Label Text="{Binding Email}" 
                                       TextColor="#ECF0F1" 
                                       FontSize="14"/>
                                <Label Text="{Binding Role}" 
                                       FontSize="13" 
                                       TextColor="#888888"
                                       FontAttributes="Italic"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
