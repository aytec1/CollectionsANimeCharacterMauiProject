<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimeDex.AddCharacterPage"
             Title="Nouveau personnage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Entry x:Name="NameEntry" Placeholder="Nom du personnage" />
            <Editor x:Name="DescriptionEditor" Placeholder="Description" AutoSize="TextChanges" />
            <Entry x:Name="ImagePathEntry" Placeholder="Nom de l'image (ex: luffy.png)" />
            <Entry x:Name="StrengthEntry" Placeholder="Force (nombre)" Keyboard="Numeric" />
            <Entry x:Name="IntelligenceEntry" Placeholder="Intelligence (nombre)" Keyboard="Numeric" />

            <Button Text="Ajouter" Clicked="OnAddClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
